<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" prefHeight="400" prefWidth="600"
          vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal"
          fx:controller="org.loose.fis.registration.example.controllers.ReaderHomePageController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>
    <Text id="title-text" text="Library Application - Home Page" GridPane.columnIndex="0" GridPane.columnSpan="2"
          GridPane.rowIndex="0"/>

    <HBox alignment="TOP_LEFT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <Button onAction="#handleFavorites" text="Favorites"/>
    </HBox>

    <HBox alignment="TOP_LEFT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <Button onAction="#handleCurrentlyReading" text="Currently Reading"/>
    </HBox>

    <HBox alignment="TOP_LEFT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
        <Button onAction="#handleWantToRead" text="Want To Read"/>
    </HBox>

    <HBox alignment="TOP_LEFT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button onAction="#handleFinishedReading" text="Finished Reading"/>
    </HBox>

    <HBox alignment="TOP_RIGHT" spacing="10" GridPane.columnIndex="4" GridPane.rowIndex="1">
        <Button onAction="#handleAuthorsList" text="Followed Authors"/>
    </HBox>

    <HBox alignment="TOP_RIGHT" spacing="10" GridPane.columnIndex="4" GridPane.rowIndex="2">
        <Button onAction="#handleQuoteList" text="Quotes"/>
    </HBox>

    <Label text="Search for a Book:" GridPane.columnIndex="2" GridPane.rowIndex="1" textFill="aliceblue"/>

    <Label text="Search for an Author:" GridPane.columnIndex="3" GridPane.rowIndex="1" textFill="aliceblue"/>

</GridPane>
