<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" prefHeight="400" prefWidth="600"
          vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal"
          fx:controller="ola.controllers.AuthorHomePageController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>
    <Text id="title-text" text="Library Application - Home Page" GridPane.columnIndex="0" GridPane.columnSpan="2"
          GridPane.rowIndex="0" fill="antiquewhite"/>

    <HBox alignment="TOP_LEFT" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="3">
        <Button onAction="#handleFavorites" text="Favorites"/>
    </HBox>

    <HBox alignment="TOP_LEFT" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2">
        <Button onAction="#handleCurrentlyReading" text="Currently Reading"/>
    </HBox>

    <HBox alignment="TOP_LEFT" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="5">
        <Button onAction="#handleWantToRead" text="Want To Read"/>
    </HBox>

    <HBox alignment="TOP_LEFT" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="6">
        <Button onAction="#handleFinishedReading" text="Finished Reading"/>
    </HBox>

    <HBox alignment="TOP_RIGHT" spacing="10" GridPane.columnIndex="7" GridPane.rowIndex="4">
        <Button onAction="#handleAuthorsList" text="Followed Authors"/>
    </HBox>

    <HBox alignment="TOP_RIGHT" spacing="10" GridPane.columnIndex="7" GridPane.rowIndex="5">
        <Button onAction="#handleQuoteList" text="Quotes"/>
    </HBox>

    <Label text="Search Book:" GridPane.columnIndex="3" GridPane.rowIndex="1" GridPane.columnSpan="4" textFill="aliceblue"/>

    <TextField fx:id="searchForBook" GridPane.columnIndex="7" GridPane.rowIndex="1"/>

    <Label text="Search Author:" GridPane.columnIndex="3" GridPane.rowIndex="2" GridPane.columnSpan="4" textFill="aliceblue"/>

    <TextField fx:id="searchForAuthor" GridPane.columnIndex="7" GridPane.rowIndex="2"/>

    <HBox alignment="BOTTOM_CENTER" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="10" GridPane.columnSpan="2">
        <Button onAction="#handleBooks" text="My Books"/>
    </HBox>

    <HBox alignment="BOTTOM_CENTER" spacing="10" GridPane.columnIndex="3" GridPane.rowIndex="10" GridPane.columnSpan="4">
        <Button onAction="#handlePosts" text="My Posts"/>
    </HBox>

</GridPane>

