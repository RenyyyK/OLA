<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" prefHeight="400" prefWidth="600"
          vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal"
          fx:controller="ola.controllers.BookPageController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>

    <ImageView>
        <image>
            <Image fx:id="cover" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        </image>
    </ImageView>

    <HBox alignment="TOP_RIGHT" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="1">
        <Button onAction="#handleRead" text="Read"/>
    </HBox>

    <HBox alignment="TOP_RIGHT" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="2">
        <Button onAction="#handleDownload" text="Download"/>
    </HBox>

    <Text id="title" text="#book.getTitle" GridPane.columnIndex="1" GridPane.columnSpan="2"
          GridPane.rowIndex="0"/>
    <Text id="author" text="#book.getAuthor" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Text id="description" text="#book.getDescription" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <ListView fx:id="#book.getComments" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <HBox alignment="BOTTOM_CENTER" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="5">
        <Button onAction="#handleAddComment" text="Add Comment"/>
    </HBox>

</GridPane>