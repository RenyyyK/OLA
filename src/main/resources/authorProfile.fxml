<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" prefHeight="400" prefWidth="600"
          vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal"
          fx:controller="org.loose.fis.registration.example.controllers.AuthorsProfileController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>
    <Text id="title-text" text="#author.getName" GridPane.columnIndex="0" GridPane.columnSpan="2"
          GridPane.rowIndex="0"/>

    <HBox alignment="TOP_RIGHT" spacing="10" GridPane.columnIndex="2" GridPane.rowIndex="1">
        <Button onAction="#handleFollow" text="Follow"/>
    </HBox>

    <ListView fx:id="author.books" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

</GridPane>

